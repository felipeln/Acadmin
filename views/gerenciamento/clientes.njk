            </div>
        {%block table%}


        <div class="table-head">
            <ul>
                {# <li>id <div class="filter-id"></div></li> #}
                <li>Nome <div class="filter-nome"></div></li>
                <li>Email <div class="filter-email"></div></li>
                <li>Telefone <div class="filter-telefone"></div></li>
                {# <li>Cpf <div class="filter-cpf"></div></li> #}
                <li>Status <div class="filter-status"></div></li>
                <li>Ac√µes<div class="filter-cpf"></div></li>
            </ul>
        </div>

        <div class="table">
            

            {% for cliente in clientesAcademia %}

                <div class="row">
                <ul>
                    {# <li>{{cliente._id}}</li> #}
                    <li>{{cliente.nome}} {{cliente.sobrenome}}</li>
                    <li>{{cliente.email}}</li>
                    <li>{{cliente.telefone}}</li>
                    {# <li>{{cliente.cpf}}</li> #}
                    <li>{{cliente.status}}</li>

                    <li class="actions">
                        <a href="/dashboard/gerenciamento/clientes/ver/{{cliente._id}}" class="ver act-btn"><ion-icon class="icon" name="eye-outline"></ion-icon> ver</a>

                        <a class="editar act-btn" href="/dashboard/gerenciamento/clientes/edit/{{cliente._id}}"><ion-icon class="icon"  name="pencil-outline"></ion-icon> Editar</a>

                        
                        
                    <form action="/dashboard/gerenciamento/clientes/edit/{{cliente._id}}?_method=DELETE" method="POST" class="position-relative">
                        
                        <button class="deletar act-btn" type="submit" class="btn btn-primary"><ion-icon class="icon" name="person-remove-outline"></ion-icon> Deletar </button>
                    </form>
                        
                        
                    </li>

                </ul>
            </div>

            {% endfor %}
         

            
