       {%endblock%}

            {%block content%}
        

                <div class="ver-menu relatorio">
                <ul>
                    <li><a href="/dashboard/relatorios">Relatorios</a> ></li>
                </ul>
                <ul>
                </ul>
                <ul>
                    <li> Relatorio Clientes </li>
                </ul>
            </div>


            <div class="form-wrapper ativo"  id="cliente">
                <h1>Relatorios Clientes</h1>

            {% for mensagem in sucesso %}

                <div class="alert-box sucesso">
                    <p>{{mensagem}}</p>
                    <button class="close-alert"><ion-icon name="close"></ion-icon></button>
                </div>

            {% endfor %}
            {% for mensagem in erro %}

                <div class="alert-box deleted">
                    <p>{{mensagem}}</p>
                    <button class="close-alert"><ion-icon name="close"></ion-icon></button>
                </div>

            {% endfor %}

                <div id="error"></div>
                <form target="_blank" action="/gerar/relatorio/clientes" method="POST" id="form" class="cliente">

                   <div class="input-wrapper">
                        <label for="tipo">Tipo</label>
                        <select name="tipo" id="tipo">
                            <option value="ativoinativo">Ativos e Inativos</option>
                            <option value="ativos">Ativos</option>
                            <option value="inativos">Inativos</option>
                        </select>
                    </div>
                    

                    <div class="input-wrapper">
                        <label for="estilo">Estilo</label>
                        <select name="estilo" id="estilo">
                            <option value="tabelagrafico">Tabela e Grafico</option>
                            <option value="tabela">Tabela</option>
                            <option value="grafico">Grafico</option>

                        </select>
                    </div>

                   
                    <button type="submit">Gerar Relatorio</button>
                </form>
              
            </div>



            {%endblock%}

{%block scripts%}
{%endblock%}
