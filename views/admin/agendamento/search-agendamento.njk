{% extends "layout.njk" %}



    {% block head %}
     <link rel="stylesheet" href="/styles/gerenciamento.css">
            <title>acadmin - Agendamento</title>
    {% endblock %}

    {%block menu%}
    <aside>
        <nav class="ativo" id="left-menu">
            <div class="logo">
                <img src="/img/acadmin3.png" alt="Acadmin Logo">
            </div>
            <ul>
                <li class="list">
                    <a href="/dashboard">
                        <span class="icon"><ion-icon name="home-outline"></ion-icon></span>
                        <span class="title">Home</span>
                    </a>
                </li>
                <li class="list">
                    <a href="/dashboard/cadastro">
                        <span class="icon"><ion-icon name="person-add-outline"></ion-icon></span>
                        <span class="title">Cadastro</span>
                    </a>
                </li>
                <li class="list active">
                    <a href="/dashboard/agendamento">
                        <span class="icon"><ion-icon name="calendar-number-outline"></ion-icon></span>
                        <span class="title">Agendamento</span>
                    </a>
                </li>
                <li class="list">
                    <a href="/dashboard/gerenciamento">
                        <span class="icon"><ion-icon name="business-outline"></ion-icon></span>
                        <span class="title">Gerenciamento</span>
                    </a>
                </li>
                <li class="list">
                    <a href="/dashboard/financeiro">
                        <span class="icon"><ion-icon name="cash-outline"></ion-icon></span>
                        <span class="title">Financeiro</span>
                    </a>
                </li>
                <li class="list">
                    <a href="/dashboard/relatorios">
                        <span class="icon"><ion-icon name="folder-outline"></ion-icon></span>
                        <span class="title">Relatorios</span>
                    </a>
                </li>
                <li class="list">
                    <a href="#">
                        <span class="icon"><ion-icon name="arrow-forward-circle-outline"></ion-icon></span>
                        <span class="title">Sair</span>
                    </a>
                </li>
            </ul>               
        </nav>
        <div class="open">></div>
    </aside>
    {%endblock%}

    {%block content%}

        <div class="table-wrapper search-agendamento">
            <div class="title table-nav">
                <h1>Agendamentos</h1>

                <form class="search-form" role="search" method="POST" action="/dashboard/agendamento/search">
                <input type="search" name="searchTerm" class="search-input" placeholder="Search..." aria-label="Search">
                    <button type="submit" class="searchButton">
                        <ion-icon name="search-outline"></ion-icon>
                    </button>
                </form>

                <a href="/dashboard/agendamento/criar/search" class="add">+ Agendamento</a>
            </div>

            {% for mensagem in msg%}

                <div class="alert-box deleted">
                    <p>{{mensagem}}</p>
                    <button class="close-alert"><ion-icon name="close"></ion-icon></button>
                </div>

            {% endfor %}

        

      {% if agendamentos.length > 0  %}
       <div class="table-head agendamento">
            <ul>
                <li>Cliente</li>
                <li>Modalidade</li>
                <li>Instrutor</li>
                <li>Dia</li>
                <li>Hora Inicio: </li>
                <li>Hora Termina: </li>
                <li>Ac√µes</li>
            </ul>
        </div>

        <div class="table">

            {% for agendamento in agendamentos%}

                <div class="row agendamento">
                <ul>
                    <li>{{agendamento.clienteNome}} </li>
                    <li>{{agendamento.modalidade}} </li>
                    <li>{{agendamento.instrutorNome}}</li>
                    <li>{{agendamento.dia}} </li>
                    <li>{{agendamento.horarioComeca}}</li>
                    <li>{{agendamento.horarioTermina}}</li>

                    <li class="actions">
                        <a href="/dashboard/agendamento/ver/{{agendamento._id}}" class="ver act-btn"><ion-icon class="icon" name="eye-outline"></ion-icon> ver</a>

                        <a class="editar act-btn" href="/dashboard/agendamento/edit/{{agendamento._id}}"><ion-icon class="icon"  name="pencil-outline"></ion-icon> Editar</a>

                        
                        
                    <form action="/dashboard/agendamento/edit/{{agendamento._id}}?_method=DELETE" method="POST" class="position-relative">
                        
                        <button class="deletar act-btn" type="submit" class="btn btn-primary"><ion-icon class="icon" name="person-remove-outline"></ion-icon> Deletar </button>
                    </form>
                        
                        
                    </li>

                </ul>
            </div>

            {% endfor %}

        </div>

        {%else%}
        <div class="not-found agendamento">
                <h2>Nenhum Agendamento encontrado</h2>
        </div>
      {% endif %}

    {% endblock %}