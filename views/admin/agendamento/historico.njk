        </nav>
        <div class="open">></div>
    </aside>
{%endblock%}

{% block content %}
        <h1>{{nomeCompleto}} - Historico de Agendamentos</h1>
       <div class="ver-menu">
            <nav>
                <ul>
                    <li><a href="/dashboard/agendamento">Agendamentos</a> > </li>
                </ul>
                <ul>
                    <li><a href="/dashboard/agendamento/criar/search">Cliente</a> > </li>
                </ul>
                <ul>
                    <li> Historico de Agendamento </li>
                </ul>
            </nav>
            
        </div>


         <div class="finance-table">

        {% if agendamentos.length > 0 %}

                    <div class="table-head agendamento">
                        <ul>
                            {# <li>Cliente</li> #}
                            <li>Modalidade</li>
                            <li>Instrutor</li>
                            <li>Dia</li>
                            <li> início </li>
                            <li>Término </li>
                            <li>Status: </li>
                            <li>Acões</li>
                        </ul>
                    </div>

                    <div class="table">
                        


                            {% for agendamento in agendamentos %}
                             <div class="row agendamento">
                                <ul>
                                    {# <li>{{agendamento.clienteNome}} </li> #}
                                    <li>{{agendamento.modalidade}} </li>
                                    <li>{{agendamento.instrutorNome}}</li>
                                    <li>{{agendamento.dia}} </li>
                                    <li>{{agendamento.horarioComeca}}</li>
                                    <li>{{agendamento.horarioTermina}}</li>
                                    <li>{{agendamento.status}}</li>

                                    <li class="actions">
                                        <a href="/dashboard/agendamento/ver/{{agendamento._id}}" class="ver act-btn"><ion-icon class="icon" name="eye-outline"></ion-icon> ver</a>

                                        <a class="editar act-btn" href="/dashboard/agendamento/edit/{{agendamento._id}}"><ion-icon class="icon"  name="pencil-outline"></ion-icon> Editar</a>

                                        
                                        
                                    <form action="/dashboard/agendamento/edit/{{agendamento._id}}?_method=DELETE" method="POST" class="position-relative">
                                        
                                        <button class="deletar act-btn" type="submit" class="btn btn-primary"><ion-icon class="icon" name="trash-outline"></ion-icon> Deletar </button>
                                    </form>
                                        
                                        
                                    </li>

                                </ul>
                        </div>
                            {% endfor %}
    
                        {% else %}
                            <div class="not-found agendamento">
                                <h2>{{nomeCompleto}} não tem nenhum agendamento</h2>
                            </div>

                        {% endif %}



                    </div>
                </div>


{% endblock %}



