    {%block content%}
       <h1>Criar agendamento</h1>

      

    <div class="ver-menu">
            <ul>
                <li><a href="/dashboard/agendamento">Agendamentos</a> ></li>
            </ul>

            <ul>
                <li><a  href="/dashboard/agendamento/criar/search">Cliente</a> ></li>
                
            </ul>
             <ul>
                <li><a  href="/dashboard/agendamento/criar/novo/{{cliente._id}}">Modalidade</a> ></li>
            </ul>
             <ul>
                <li>Agendar</li>
            </ul>
        </div>


        <div class="form-wrapper">
        <form action="/dashboard/agendamento/criar/modalidade/agendado" method="POST">
        

            <div class="input-wrapper">
                <label for="cliente">Cliente</label>
                <select class="disabled" name="cliente" id="cliente">
                    <option value="{{cliente.id}}">{{cliente.nome}} {{cliente.sobrenome}}</option>
                </select>
            </div>
            <div class="input-wrapper">
                <label for="modalidade">Modalidade</label>
                <select class="disabled" name="modalidade" id="modalidade">
                    <option value="{{modalidade}}">{{modalidade}}</option>
                </select>
            </div>

            <div class="input-wrapper">
                <label for="instrutor">Instrutor</label>
                <select name="instrutor" id="instrutor" required>
                    
                    {% for instrutor in instrutores %}
                        <option value="{{instrutor.id}}">{{instrutor.nome}} {{instrutor.sobrenome}}</option>
                    {% endfor %}

                </select>
            </div>

        <div class="input-wrapper">
                <label for="dia">Dia:</label>
               <input type="date" name="dia" id="dia" required>
        </div>
        <div class="input-wrapper">
                <label for="horario">Horario:</label>
               <select name="horario" id="horario" required>
                {% for horario in horarios %}
                        <option value="{{horario.hora}}">{{horario.hora}}</option>
                {% endfor %}
               </select>
        </div>

         <button type="submit" id="agendar">Agendar</button>
</form>
</div>
    {% endblock %}

    {%block scripts%}
        <script src="/scripts/hoje.js"></script>
    {%endblock%}