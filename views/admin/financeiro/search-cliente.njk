{% extends "layout.njk" %}


{% block head %}
        <link rel="stylesheet" href="/styles/gerenciamento.css">
        <link rel="stylesheet" href="/styles/table.css">
        <title>Acadmin - Gerenciamento</title>
{% endblock %}

{%block menu%}
    <aside>
        <nav class="ativo" id="left-menu">
            <div class="logo">
                <img src="/img/acadmin3.png" alt="Acadmin Logo">
            </div>
            <ul>
                <li class="list">
                    <a href="/dashboard">
                        <span class="icon"><ion-icon name="home-outline"></ion-icon></span>
                        <span class="title">Home</span>
                    </a>
                </li>
                <li class="list">
                    <a href="/dashboard/cadastro">
                        <span class="icon"><ion-icon name="person-add-outline"></ion-icon></span>
                        <span class="title">Cadastro</span>
                    </a>
                </li>
                <li class="list ">
                    <a href="/dashboard/agendamento">
                        <span class="icon"><ion-icon name="calendar-number-outline"></ion-icon></span>
                        <span class="title">Agendamento</span>
                    </a>
                </li>
                <li class="list ">
                    <a href="/dashboard/gerenciamento/funcionarios">
                        <span class="icon"><ion-icon name="business-outline"></ion-icon></span>
                        <span class="title">Gerenciamento</span>
                    </a>
                </li>
                <li class="list active">
                    <a href="/dashboard/financeiro">
                        <span class="icon"><ion-icon name="cash-outline"></ion-icon></span>
                        <span class="title">Financeiro</span>
                    </a>
                </li>
                <li class="list">
                    <a href="/dashboard/relatorios">
                        <span class="icon"><ion-icon name="folder-outline"></ion-icon></span>
                        <span class="title">Relatorios</span>
                    </a>
                </li>
                <li class="list">
                    <a href="/login">
                        <span class="icon"><ion-icon name="arrow-forward-circle-outline"></ion-icon></span>
                        <span class="title">Sair</span>
                    </a>
                </li>
            </ul>               
        </nav>
        <div class="open">></div>
    </aside>
{%endblock%}

{% block content %}
        <h1>Escolha o cliente</h1>

        <div class="ver-menu">
            <ul>
                <li><a href="/dashboard/financeiro/pagamentos">Pagamentos</a> </li>
            </ul>
            <ul>
                <li>> Cliente </li>
            </ul>
        </div>

        <div class="table-wrapper">
            <div class="title table-nav">
                <h1>Pesquisar</h1>

                <form class="search-form" role="search" method="POST" action="/dashboard/financeiro/criar/search">
                <input type="search" name="searchTerm" class="search-input" placeholder="Search..." aria-label="Search">
                </form>
            </div>


            {% if clientesAcademia.length > 0 %}
            
                {%block table%}
                        <div class="table-head pagamentos">
                            <ul>
                                <li>Nome</li>
                                <li>Email</li>
                                <li>cpf</li>
                                <li>Status</li>
                                <li>Acões</li>
                            </ul>
                        </div>

                        <div class="table">
                            

                            {% for cliente in clientesAcademia %}

                                <div class="row pagamentos">
                                    <ul>
                                        <li>{{cliente.nome}} {{cliente.sobrenome}}</li>
                                        <li>{{cliente.email}}</li>
                                        <li>{{cliente.cpf}}</li>
                                        <li>{{cliente.status}}</li>

                                        <li class="actions agendamento">
                                            
                                            <a href="/dashboard/financeiro/criar-novo/pagamento/{{cliente._id}}" class="ver act-btn"><ion-icon name="cash-outline" class="icon"></ion-icon> Nova Cobrança</a>

                                            <a href="/dashboard/financeiro/pagamento/historico/{{cliente._id}}" class="editar act-btn"><ion-icon name="reader-outline" class="icon"></ion-icon>Historico de pagamentos</a>
                                        
                                        </li>

                                    </ul>
                                </div>

                            {% endfor %}
                        </div>
                {%endblock%}


            {%else%}
            <div class="not-found">
                <h2>Nenhum Cliente encontrado</h2>
            </div>
            {% endif %}
   
            
        </div>

{% endblock %}


