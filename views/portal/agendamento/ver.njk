{% extends 'layout.njk' %}


{% block head %}
    <link rel="stylesheet" href="/styles/gerenciamento.css">
    <link rel="stylesheet" href="/styles/table.css">
    <title>Acadmin - Ver Agendamento</title>
{% endblock %}


{%block menu%}
<aside>
    <nav class="ativo" id="left-menu">
        <div class="logo">
                <img src="/img/acadmin3.png" alt="Acadmin Logo">
        </div>
        <ul>
            <li class="list ">
                <a href="/portal">
                    <span class="icon"><ion-icon name="home-outline"></ion-icon></span>
                    <span class="title">Home</span>
                </a>
            </li>
            <li class="list active">
                <a href="/portal/agendamento">
                    <span class="icon"><ion-icon name="calendar-number-outline"></ion-icon></span>
                    <span class="title">Agendamento</span>
                </a>
            </li>
            <li class="list">
                <a href="/portal/financeiro">
                    <span class="icon"><ion-icon name="cash-outline"></ion-icon></span>
                    <span class="title">Financeiro</span>
                </a>
            </li>
            <li class="list">
                <a href="/login">
                    <span class="icon"><ion-icon name="arrow-forward-circle-outline"></ion-icon></span>
                    <span class="title">Sair</span>
                </a>
            </li>
        </ul>               
    </nav>
    <div class="open">></div>
</aside>
{%endblock%}

{%block content%}
                

        <h1 class="ver-title">{{agendamento.clienteNome}} - {{agendamento.dia}} - {{agendamento.horarioComeca}}</h1>
<hr>
        <div class="ver-menu">
            <ul>
                <li><a href="/portal/agendamento">Voltar </a></li>
                <li> / {{agendamento.clienteNome}} </li>
            </ul>

             <span>
                <a class="editar" href="/portal/agendamento/edit/{{agendamento._id}}">Editar</a>
            </span>
        </div>

     
<div class="table-container">
    
        <div class="table-rows">
                    
                
                    <div class="row">
                        <div class="col col-title" >Cliente</div>
                        <div class="col">
                            {{agendamento.clienteNome}}
                        </div>
                    </div>
                   
                    <div class="row">
                        <div class="col col-title" >Instutor</div>
                        <div class="col">
                            {{agendamento.instrutorNome}}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col col-title" >Modalidade</div>
                        <div class="col">
                            {{agendamento.modalidade}}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col col-title" >Dia:</div>
                        <div class="col">
                            {{agendamento.dia}}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col col-title" >Horario Inicio</div>
                        <div class="col">
                            {{agendamento.horarioComeca}}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col col-title" >Horario termina</div>
                        <div class="col">
                            {{agendamento.horarioTermina}}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col col-title" >Status</div>
                        <div class="col">
                            {{agendamento.status}}
                        </div>
                    </div>
        </div>
       
    </div>


{%endblock%}



{%block scripts%}
{%endblock%}