{% extends "layout.njk" %}

    {% block head %}
            <link rel="stylesheet" href="/styles/cadastro.css">
            <title>Acadmin - Cadastro</title>
    {% endblock %}

        
    </head>
    <body>
        {%block menu%}
        <aside>
                <nav class="ativo">
                    <ul>
                        <li class="list ">
                            <a href="/dashboard">
                                <span class="icon"><ion-icon name="home-outline"></ion-icon></span>
                                <span class="title">Home</span>
                            </a>
                        </li>
                        <li class="list active">
                            <a href="/dashboard/cadastro#cliente">
                                <span class="icon"><ion-icon name="person-add-outline"></ion-icon></span>
                                <span class="title">Cadastro</span>
                            </a>
                        </li>
                        <li class="list">
                            <a href="/dashboard/agendamento">
                                <span class="icon"><ion-icon name="calendar-number-outline"></ion-icon></span>
                                <span class="title">Agendamento</span>
                            </a>
                        </li>
                        <li class="list">
                            <a href="/dashboard/gerenciamento">
                                <span class="icon"><ion-icon name="business-outline"></ion-icon></span>
                                <span class="title">Gerenciamento</span>
                            </a>
                        </li>
                        <li class="list">
                            <a href="/dashboard/financeiro">
                                <span class="icon"><ion-icon name="cash-outline"></ion-icon></span>
                                <span class="title">Financeiro</span>
                            </a>
                        </li>
                        <li class="list">
                            <a href="/dashboard/relatorios">
                                <span class="icon"><ion-icon name="folder-outline"></ion-icon></span>
                                <span class="title">Relatorios</span>
                            </a>
                        </li>
                        <li class="list">
                            <a href="/login">
                                <span class="icon"><ion-icon name="arrow-forward-circle-outline"></ion-icon></span>
                                <span class="title">Sair</span>
                            </a>
                        </li>
                    </ul>               
                </nav>
                <div class="open">></div>
            </aside>
        {%endblock%}

            {%block content%}
            <div class="submenu">
                <button class="submenu_btn ativo">Cliente</button>
                <button class="submenu_btn">Funcionario</button>
            </div>

            <div class="form-wrapper ativo"  id="cliente">
                <h1>Cadastrar Cliente</h1>
    
                <div id="error"></div>
                <form action="" method="" id="form" class="cliente">
                    <div class="input-wrapper">
                        <label for="Nome">Nome </label>
                        <input type="text" name="Nome" id="Nome" placeholder="Nome">
                    </div>
                    <div class="input-wrapper">
                        <label for="Sobrenome">Sobrenome </label>
                        <input type="text" name="Sobrenome" id="Sobrenome" placeholder="Sobrenome">
                    </div>

                    <div class="input-wrapper">
                        <label for="cpf">CPF </label>
                        <input type="text" name="cpf" id="cpf" placeholder="cpf">
                    </div>
                    <div class="input-wrapper">
                        <label for="celular">Celular </label>
                        <input type="text" name="celular" id="celular" placeholder="celular">
                    </div>
                    <div class="input-wrapper">
                        <label for="Endereço">Endereço </label>
                        <input type="text" name="Endereço" id="Endereço" placeholder="Endereço">
                    </div>
                    
                    <div class="input-wrapper">
                        <label for="cep">Cep </label>
                        <input type="text" name="cep" id="cep" placeholder="CEP">
                    </div>

                    <div class="input-wrapper">
                        <label for="email">Email </label>
                        <input type="text" name="email" id="email" placeholder="seu@email.com">
                    </div>

                    <div class="input-wrapper">
                        <label for="password">Senha </label>
                        <input type="password" name="password" id="password" placeholder="senha">
                    </div>
                    <button type="submit" id="logar">Cadastrar</button>
                </form>
              
            </div>

            <div class="form-wrapper"  id="funcionario">
                <h1>Cadastrar Funcionario</h1>
    
                <div id="error"></div>
                <form action="" method="" id="form" class="funcionario">
                    <div class="input-wrapper">
                        <label for="Nome">Nome </label>
                        <input type="text" name="Nome" id="Nome" placeholder="Nome">
                    </div>
                    <div class="input-wrapper">
                        <label for="Sobrenome">Sobrenome </label>
                        <input type="text" name="Sobrenome" id="Sobrenome" placeholder="Sobrenome">
                    </div>

                    <div class="input-wrapper">
                        <label for="cpf">CPF </label>
                        <input type="text" name="cpf" id="cpf" placeholder="cpf">
                    </div>
                    <div class="input-wrapper">
                        <label for="celular">Celular </label>
                        <input type="text" name="celular" id="celular" placeholder="celular">
                    </div>
                    <div class="input-wrapper">
                        <label for="Endereço">Endereço </label>
                        <input type="text" name="Endereço" id="Endereço" placeholder="Endereço">
                    </div>
                    
                    <div class="input-wrapper">
                        <label for="cep">Cep </label>
                        <input type="text" name="cep" id="cep" placeholder="CEP">
                    </div>

                    <div class="input-wrapper">
                        <label for="email">Email </label>
                        <input type="text" name="email" id="email" placeholder="seu@email.com">
                    </div>

                    <div class="input-wrapper">
                        <label for="password">Senha </label>
                        <input type="password" name="password" id="password" placeholder="senha">
                    </div>
    
                    <button type="submit" id="logar">Cadastrar</button>
                </form>
              
            </div>
            {% endblock %}


      
{%block scripts%}
    <script src="/scripts/cadastro.js"></script>
{%endblock%}

